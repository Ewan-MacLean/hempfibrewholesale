<head>
    <script src="store.js" async></script>
</head>
<body>

    <h1>Products</h1>
    <div id="gallery" class="container mb-4 px-0 ">
        <div id="products" class="row">
            <%// items.inventory.forEach(function(item){ %>
            <div class="col-auto" data-item-id= "<%=// item.id %>" >
                    <div class="card" id="product-card">
                        <img class="card-img-top shop-item-image" src="https://image.cannabis.wiki/news/istock-1032521774-1566677660-1440w.jpeg" >
                            <div class="card-body">
                                <h5 class="card-title shop-item-title">Hemp Bast Fibre<%= //item.name %></h5>
                                <h6 class="card-subtitle mb-2 text-muted shop-item-price">$49.99<%=// item.price / 100 %> </h6>
                                <p class="card-text shop-item-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <button class="btn btn-success shop-item-button">Add to cart</button>
                        </div>
                    </div>
                </a>
            </div>
            <% //}) %>
            <div class="col-auto">
                    <div class="card" id="product-card">
                        <img class="card-img-top shop-item-image" src="https://thereview.ca/wp-content/uploads/2018/08/CB_2018-08-03_marcBercier-hempcrete_WEB.jpg" >
                            <div class="card-body">
                                <h5 class="card-title  shop-item-title">Hemp Hurd</h5>
                                <h6 class="card-subtitle mb-2 text-muted shop-item-price">$39.99</h6>
                                <p class="card-text shop-item-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <button class="btn btn-success shop-item-button">Add to cart</button>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>


    <section class="container content-section">
        <h2 class="section-header">CART</h2>
        <div class="cart-row">
            <span class="cart-item cart-header cart-column">ITEM</span>
            <span class="cart-price cart-header cart-column">PRICE</span>
            <span class="cart-quantity cart-header cart-column">QUANTITY</span>
        </div>
        <div class="cart-items">
        </div>
        <div class="cart-total">
            <strong class="cart-total-title">Total</strong>
            <span class="cart-total-price">$0</span>
        </div>
        <a href="#html-form">
            <button class="btn btn-primary btn-purchase" type="button">NEXT</button>
        </a>        
    </section>


     <div id="html-form">
        <form action="https://formsubmit.co/ewanmaclean77@gmail.com" method="POST">

            <input id="input" type="email" name="Email" placeholder="Email Address" required>
            <input id="input" type="tel" name="Phone" placeholder="Phone (optional)">
            <h2>Your Order</h2>
            <textarea name="Order" id="order-list" cols="30" rows="6"></textarea>
            <h2 class="mt-3">Total</h2>
            <textarea name="Total" id="order-total" cols="3" rows="3"></textarea>
            <input type="text" name="Comments" id="comments" placeholder="Comments (optional)">

            <input type="hidden" name="_captcha" value="false">
            <button type="submit">Confirm Order</button>
         </form>
    </div>  

</body>
